{
  "name": "@uxly/1shot-client",
  "version": "1.3.2",
  "description": "TypeScript client for the 1Shot API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.mjs",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UXlySoftware/1shot-clients.git"
  },
  "keywords": [
    "1shot",
    "api",
    "client",
    "typescript"
  ],
  "author": "UXly Software",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UXlySoftware/1shot-clients/issues"
  },
  "homepage": "https://github.com/UXlySoftware/1shot-clients#readme",
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@noble/ed25519": "^2.2.0",
    "@noble/hashes": "^1.3.3"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  }
}
